{{!< default}}
<div class="articles_wrapper">
    {{#foreach posts}}
    <div class="card_wrapper card_index">
        <article onclick="location.href='{{{url}}}';" class="card scale">
            <a href="{{{url}}}" rel="bookmark">
                <div class="card_image">
                    {{#if image}}
                        <img src="{{image}}" alt="{{title}}"></img>
                    {{else}}
                        <svg alt="{{title}}"/ >
                    {{/if}}
                    <div class="card_image_filter"></div>
                    <div class="card_title">
                        <h2 class="post_title">{{title}}</h2>
                    </div>
                </div>
                <div class="card_content">
                    <div class="post_summary">
                        <p class="post_excerpt">{{{excerpt words="50"}}}</p>
                    </div>
            </a>
                {{#if tags}}
                <div class="post_footer_wrapper">
                    <div class="post_footer">
                        <i class="fa fa-tag" aria-hidden="true"></i>{{tags separator=", "}}
                    </div>
                </div>
                {{/if}}
                <time class="date" datetime="{{date format="YYYY-MM-DD"}}">
            </div>
        </article>
    </div>
    {{/foreach}}
    {{#if pagination}}
        {{{pagination}}}
    {{/if}}
</div>