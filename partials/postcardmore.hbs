<div class="card-wrapper wrapper-more">
    <div class="card card-more scale">
        <a href="{{{url}}}" rel="bookmark">
        <div class="card-image">
            {{#if image}}
                <img src="{{image}}" alt="{{title}}"></img>
            {{else}}
                <svg alt="{{title}}"/ >
            {{/if}}
            <div class="card-image-filter"></div>
            <div class="card-title">
                <h3 class="post-title">{{title}}</h3>
            </div>
        </div>
        <div class="card-content">
            <div class="post-summary">
                <p class="post-excerpt">{{{excerpt words="50"}}}</p>
            </div>
        </a>
            {{#if tags}}
            <div class="post-footer-wrapper">
                <div class="post-footer">
                    <i class="fa fa-tag" aria-hidden="true"></i>{{tags separator=", "}}
                </div>
            </div>
            {{/if}}
            <time class="date" datetime="{{date format="YYYY-MM-DD"}}">
        </div>

    </div>
</div>